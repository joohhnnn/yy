package com.txznet.txz.component.media.util;

import com.txznet.txz.component.media.base.IMediaTool;
import com.txznet.txz.module.media.plugin.IPluginMediaTool;

/**
 * 媒体工具相关model转换工具
 *
 * Created by J on 2019/3/15.
 */
public class MediaModelConverter {
    public static IPluginMediaTool.LOOP_MODE toPluginLoopMode(IMediaTool.LOOP_MODE mode) {
        return IPluginMediaTool.LOOP_MODE.valueOf(mode.name());
    }

    public static IMediaTool.LOOP_MODE fromPluginLoopMode(IPluginMediaTool.LOOP_MODE mode) {
        return IMediaTool.LOOP_MODE.valueOf(mode.name());
    }

    public static IPluginMediaTool.PLAYER_STATUS toPluginPlayerStatus(
            IMediaTool.PLAYER_STATUS status) {
        return IPluginMediaTool.PLAYER_STATUS.valueOf(status.name());
    }

    public static IMediaTool.PLAYER_STATUS fromPluginPlayerStatus(
            IPluginMediaTool.PLAYER_STATUS status) {
        return IMediaTool.PLAYER_STATUS.valueOf(status.name());
    }

    public static IPluginMediaTool.MEDIA_TOOL_OP toPluginMediaToolOp(IMediaTool.MEDIA_TOOL_OP op) {
        return IPluginMediaTool.MEDIA_TOOL_OP.valueOf(op.name());
    }

    public static IMediaTool.MEDIA_TOOL_OP fromPluginMediaToolOp(
            IPluginMediaTool.MEDIA_TOOL_OP op) {
        return IMediaTool.MEDIA_TOOL_OP.valueOf(op.name());
    }
}
