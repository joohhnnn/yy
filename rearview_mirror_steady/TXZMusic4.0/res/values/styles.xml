<resources>

    <style name="AppDefaultTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="text_size_h1">@dimen/m26</item>
        <item name="text_size_h2">@dimen/m24</item>
        <item name="text_size_h3">@dimen/m22</item>
        <item name="text_size_h4">@dimen/m20</item>
    </style>

    <style name="AppThemeNotFullscreen" parent="AppTheme">

    </style>

    <style name="StartAppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_pic</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="divider_line_vertical">
        <item name="android:layout_width">0.5px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#33ffffff</item>
    </style>

    <style name="PlayerListFragmentStyle">
        <item name="android:background">@android:color/transparent</item>
        <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置window背景透明，也就是去边框 -->
        <item name="android:windowCloseOnTouchOutside">true</item>

        <item name="android:backgroundDimEnabled">true</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="album_item_content_ll">
        <item name="android:layout_width">?attr/album_item_content_size_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="album_item_content_des_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxEms">8</item>
        <item name="android:lines">2</item>
        <item name="android:paddingTop">?attr/album_item_content_tv_padding_top</item>
        <item name="android:paddingLeft">?attr/album_item_content_tv_padding_left</item>
        <item name="android:paddingRight">?attr/album_item_content_tv_padding_right</item>
        <item name="android:textColor">@color/album_intro_text_color</item>
        <item name="android:textSize">?attr/text_size_h4</item>
        <item name="android:layout_marginTop">?attr/album_item_icon_with_text_top</item>
    </style>

    <style name="album_item_content_icon">
        <item name="android:layout_width">?attr/album_item_content_size_width</item>
        <item name="android:layout_height">?attr/album_item_content_size_width</item>
    </style>

    <style name="album_item_content_icon_playing">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/fm_album_item_play</item>
    </style>

    <style name="album_item_content_margin">
        <item name="android:layout_marginTop">?attr/album_item_content_margin_top</item>
    </style>

    <style name="list_text">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">?attr/text_size_h3</item>
    </style>

    <style name="title_text">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/type_text</item>
        <item name="android:textSize">?attr/text_size_h1</item>
    </style>

    <style name="mine_main">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/setting_btn_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="default_empty_icon_style">
        <item name="android:layout_width">@dimen/m98</item>
        <item name="android:layout_height">@dimen/m98</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="setting_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/setting_item_height</item>
        <item name="android:paddingLeft">@dimen/x22</item>
        <item name="android:paddingRight">@dimen/x22</item>
        <item name="android:background">@drawable/bg_item_setting</item>
    </style>

    <style name="round_rectangle">
        <item name="android:layout_width">@dimen/m140</item>
        <item name="android:layout_height">@dimen/m33</item>
        <item name="android:background">@drawable/selector_exit_cancel_app</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">?attr/text_size_h3</item>
    </style>

    <style name="round_rectangle_item">
        <item name="android:layout_width">@dimen/y150</item>
        <item name="android:layout_height">@dimen/y48</item>
        <item name="android:background">@drawable/selector_exit_cancel_app</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_1</item>
    </style>

    <style name="album_category_dot_style">
        <item name="android:layout_width">@dimen/m6</item>
        <item name="android:layout_height">@dimen/m6</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="CategoryTabTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">?attr/text_size_h2</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="loading_dialog" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>