<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/x450"
    android:layout_height="wrap_content"
    android:background="@drawable/sim_notice_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_upgrade_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/y30"
        tools:text="温馨提示"/>

    <TextView
        android:layout_marginTop="@dimen/y10"
        android:id="@+id/tv_upgrade_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/y24"
        tools:text="是否确认升级语音助手V3.0.0"/>

    <TextView
        android:id="@+id/tv_upgrade_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y10"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:layout_marginTop="@dimen/y10"
        android:lineSpacingMultiplier="1.25"
        android:maxLines="4"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/y24">
    </TextView>

    <View
        android:layout_marginTop="@dimen/y20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#33FFFFFF"/>

    <LinearLayout
        android:id="@+id/ll_upgrade_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_upgrade_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="#FF44A9FF"
            android:textSize="@dimen/y24"/>

        <View
            android:layout_width="@dimen/y1"
            android:layout_height="match_parent"
            android:background="#33FFFFFF"/>

        <TextView
            android:id="@+id/tv_upgrade_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/y24"/>
    </LinearLayout>

</LinearLayout>