<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_mine_head"
        android:layout_width="wrap_content"
        android:layout_height="?attr/fg_music_title_height"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/rl_history_music"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_history_music"
                style="@style/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/x13"
                android:paddingRight="@dimen/x13"
                android:text="历史音乐" />

            <ImageView
                android:id="@+id/iv_history_music_select"
                style="@style/album_category_dot_style"
                android:src="@drawable/type_select"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_history_radio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_history_radio"
                style="@style/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/x13"
                android:paddingRight="@dimen/x13"
                android:text="历史电台" />

            <ImageView
                android:id="@+id/iv_history_radio_select"
                style="@style/album_category_dot_style"
                android:src="@drawable/type_select"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_history_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_setting"
                style="@style/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/x13"
                android:paddingRight="@dimen/x13"
                android:text="系统设置" />

            <ImageView
                android:id="@+id/iv_setting_select"
                style="@style/album_category_dot_style"
                android:src="@drawable/type_select"/>
        </RelativeLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <!-- <include layout="@layout/list_with_nodata"/> -->

</LinearLayout>