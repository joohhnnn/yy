<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="?attr/list_item_height">


    <ImageView
        android:id="@+id/iv_left_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/ic_playlist_status_normal" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/y10"
        android:paddingRight="@dimen/y10"
        android:scaleType="center"
        android:src="@drawable/playlist_delete" />

    <TextView
        android:id="@+id/title"
        style="@style/list_text"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/iv_left_list"
        android:layout_toLeftOf="@id/iv_delete"
        android:paddingLeft="@dimen/x12"
        android:paddingRight="@dimen/x12"
        android:text="我和我的小伙伴们都惊呆了我和我的小伙伴们都惊呆了"/>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_alignParentBottom="true"
        android:background="#4cFFFFFF" />


</RelativeLayout>