<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_setting"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="@dimen/y24"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_boot_play"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y4"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginRight="@dimen/x4"
            android:layout_marginTop="@dimen/y4"
            android:layout_weight="1"
            android:background="@color/setting_item_bg"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:text="开机30秒自动播报"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/m22"/>

            <ImageView
                android:id="@+id/iv_switch_boot_play"
                android:layout_width="@dimen/x58"
                android:layout_height="@dimen/y28"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/setting_switch_on"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_auto_play"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y4"
            android:layout_marginLeft="@dimen/x4"
            android:layout_marginRight="@dimen/x16"
            android:layout_marginTop="@dimen/y4"
            android:layout_weight="1"
            android:background="@color/setting_item_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:text="自动打开播放界面"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/m22"/>

            <ImageView
                android:id="@+id/iv_switch_auto_play"
                android:layout_width="@dimen/x58"
                android:layout_height="@dimen/y28"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/setting_switch_off"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_quality"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y4"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginRight="@dimen/x4"
            android:layout_marginTop="@dimen/y4"
            android:layout_weight="1"
            android:background="@color/setting_item_bg"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:text="音质选择"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/m22"/>

            <TextView
                android:id="@+id/tv_quality_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="@dimen/m20"
                android:layout_toLeftOf="@+id/setting_right_1"
                android:paddingRight="@dimen/x10"
                android:text="流畅模式"/>

            <ImageView
                android:id="@+id/setting_right_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/setting_right"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_clear_cache"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y4"
            android:layout_marginLeft="@dimen/x4"
            android:layout_marginRight="@dimen/x16"
            android:layout_marginTop="@dimen/y4"
            android:layout_weight="1"
            android:background="@color/setting_item_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:text="清除缓存"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/m22"/>

            <TextView
                android:id="@+id/tv_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="@dimen/m20"
                android:paddingRight="@dimen/x10"
                android:layout_toLeftOf="@+id/setting_right_2"
                android:text="98.22M"/>

            <ImageView
                android:id="@+id/setting_right_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/setting_right"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_version_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y4"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginRight="@dimen/x4"
            android:layout_marginTop="@dimen/y4"
            android:layout_weight="1"
            android:background="@color/setting_item_bg"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:text="音质选择"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/m22"/>

            <TextView
                android:id="@+id/tv_versionInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="当前版本：2.0.0"
                android:textSize="@dimen/m20"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_about_us"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y4"
            android:layout_marginLeft="@dimen/x4"
            android:layout_marginRight="@dimen/x16"
            android:layout_marginTop="@dimen/y4"
            android:layout_weight="1"
            android:background="@color/setting_item_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:text="关于我们"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/m22"/>

<!--            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/setting_right_3"
                android:text="流畅模式"/>-->

            <ImageView
                android:id="@+id/setting_right_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/setting_right"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>