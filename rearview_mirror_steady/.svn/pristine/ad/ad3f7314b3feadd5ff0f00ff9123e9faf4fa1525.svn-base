<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    android:paddingBottom="@dimen/m17"
    android:paddingLeft="@dimen/m22"
    android:paddingRight="@dimen/m22"
    android:background="@drawable/reminder_push_bg"
    android:paddingTop="@dimen/m17" 
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/iv_reminder_push_icon"
        android:layout_width="@dimen/m70"
        android:layout_height="@dimen/m70"
        android:src="@drawable/reminder_push_icon" />
	
    <TextView
        android:id="@+id/tv_reminder_push_title"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/m20"
        android:layout_weight="1"
        android:text="提醒事项"
        android:textColor="#FFF"
        android:textSize="@dimen/m24" />

    <ImageView
        android:layout_width="@dimen/m1"
        android:layout_height="@dimen/m60"
        android:layout_marginLeft="@dimen/m20"
        android:background="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_reminder_push_tips"
        android:text="关闭"
        android:textColor="#FFF"
        android:layout_marginLeft="@dimen/m20"
        android:drawableLeft="@drawable/icon_start_nav_white"
        android:drawablePadding="@dimen/m16"
        android:textSize="@dimen/m24" />
    
</LinearLayout>