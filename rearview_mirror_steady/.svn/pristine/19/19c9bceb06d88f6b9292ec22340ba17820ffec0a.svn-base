<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/y27"
        android:layout_height="@dimen/y27"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x16"
        android:scaleType="fitCenter"
        android:src="@drawable/src_car_main_menu_icon_help"/>

    <com.txznet.webchat.ui.common.widget.ThemedTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y80"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/x59"
        android:text="@string/lb_car_main_menu_help"
        android:textColor="@color/color_primary"
        android:textSize="@dimen/y20"
        app:theme_color="primary"/>

    <com.txznet.webchat.ui.common.widget.ThemedImageView
        android:id="@+id/iv_arrow"
        android:layout_width="@dimen/x19"
        android:layout_height="@dimen/y20"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x16"
        android:scaleType="fitCenter"
        android:src="@drawable/src_arrow_right"
        app:theme_src="@drawable/src_arrow_right"/>

    <View
        android:id="@+id/view_focus_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="@drawable/ic_nav_indicator_rect"/>

    <View
        style="@style/divider_line_horizontal"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>