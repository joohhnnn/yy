<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/wrapLayoutStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="@dimen/mdp10"
        android:paddingBottom="@dimen/mdp10"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/xml_bg_sim_price_item">

        <TextView
            android:id="@+id/tvPriceStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10元"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/sp28" />

        <TextView
            android:id="@+id/tvUserPriceStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="售价¥29.97"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/sp18" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/wrapLayoutEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="@dimen/mdp10"
        android:paddingBottom="@dimen/mdp10"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/xml_bg_sim_price_item">

        <TextView
            android:id="@+id/tvPriceEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10元"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/sp28" />

        <TextView
            android:id="@+id/tvUserPriceEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="售价¥29.97"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/sp18" />

    </LinearLayout>

</LinearLayout>