<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/list_help_detail"
            android:divider="@null"
            android:childDivider="@null"
            android:groupIndicator="@null"
            android:background="@drawable/white_range_layout"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"  />

        <LinearLayout
            android:id="@+id/win_help_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x8"
            android:background="@drawable/white_range_layout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y48"
                android:background="#0cFFFFFF"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_help_qrcode_icon"
                    android:layout_width="@dimen/m24"
                    android:layout_height="@dimen/m24"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x16"
                    android:src="@drawable/win_help_play" />

                <TextView
                    android:id="@+id/tv_help_qrcode_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_marginRight="@dimen/x16"
                    android:gravity="center"
                    android:text="视频演示"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/m18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_help_qrcode"
                    android:layout_width="@dimen/m104"
                    android:layout_height="@dimen/m104" />

                <TextView
                    android:id="@+id/tv_help_qrcode_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x8"
                    android:text="扫码轻松查看\n功能演示说明"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/m16" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tvToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:background="@drawable/white_help_tip_layout"
        android:gravity="center"
        android:paddingLeft="15px"
        android:paddingRight="15px"
        android:visibility="gone" />
</FrameLayout>