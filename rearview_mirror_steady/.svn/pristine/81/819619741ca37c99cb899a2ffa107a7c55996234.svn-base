<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x400"
    android:layout_height="wrap_content"
    android:background="@drawable/sim_notice_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_notice_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y10"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/y40"
        android:paddingBottom="@dimen/y40"
        android:textColor="#FFF"
        android:textSize="@dimen/y24" >
    </TextView>

     <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="#33FFFFFF" />

    <LinearLayout
        android:id="@+id/ll_notice_dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_notice_dialog_confirm"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="充值加油包"
            android:textColor="#FFFF5000"
            android:textSize="@dimen/y24" />
        <View
            android:layout_width="@dimen/y1"
            android:layout_height="match_parent"
            android:background="#33FFFFFF" />
        <TextView
            android:id="@+id/tv_notice_dialog_cancel"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/y24" />
    </LinearLayout>

</LinearLayout>