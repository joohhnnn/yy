<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_delete_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/m56"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/m46"
    android:paddingRight="@dimen/m46"
    tools:background="@drawable/base_bg">

    <CheckBox
        android:id="@+id/cb_choice"
        android:layout_width="@dimen/m32"
        android:layout_height="@dimen/m32"
        android:background="@drawable/base_selector_btn_selector"
        android:button="@null" />

    <TextView
        android:id="@+id/tv_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/m8"
        android:textSize="@dimen/base_tv_h3"
        android:text="全选" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.txznet.music.widget.AlphaButton
        android:id="@+id/btn_delete_sure"
        android:layout_width="@dimen/m62"
        android:layout_height="@dimen/m29"
        android:background="@drawable/base_round_rectange_btn_bg"
        android:text="删除"
        android:textColor="@color/delete_tv_color"
        android:textSize="@dimen/base_tv_h6" />

    <com.txznet.music.widget.AlphaButton
        android:id="@+id/btn_delete_cancel"
        android:layout_width="@dimen/m62"
        android:layout_height="@dimen/m28"
        android:layout_marginLeft="@dimen/m9"
        android:background="@drawable/base_round_rectange_btn_bg"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="@dimen/base_tv_h6" />
</LinearLayout>