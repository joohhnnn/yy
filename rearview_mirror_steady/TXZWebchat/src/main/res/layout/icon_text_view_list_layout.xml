<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrValue="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y90"
    android:orientation="horizontal">

    <com.txznet.webchat.ui.rearview_mirror.widget.IconTextView
        android:id="@+id/id_indicator_one"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        attrValue:color_nor="@color/color_tab_text_nor"
        attrValue:color_sel="@color/color_tab_text_sel"
        attrValue:nor_background="@color/color_tab_bg_nor"
        attrValue:sel_background="@color/color_tab_bg_sel"
        attrValue:text="@string/lb_login_wechat_title"
        attrValue:text_size="@dimen/y30"
        attrValue:itv_strip_height="@dimen/y4"
        attrValue:sel_strip_background="@color/color_tab_strip_sel"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/color_tab_divider" />

    <com.txznet.webchat.ui.rearview_mirror.widget.IconTextView
        android:id="@+id/id_indicator_two"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        attrValue:color_nor="@color/color_tab_text_nor"
        attrValue:color_sel="@color/color_tab_text_sel"
        attrValue:nor_background="@color/color_tab_bg_nor"
        attrValue:sel_background="@color/color_tab_bg_sel"
        attrValue:text="@string/lb_login_control_title"
        attrValue:text_size="@dimen/y30"
        attrValue:itv_strip_height="@dimen/y4"
        attrValue:sel_strip_background="@color/color_tab_strip_sel"/>

</LinearLayout>