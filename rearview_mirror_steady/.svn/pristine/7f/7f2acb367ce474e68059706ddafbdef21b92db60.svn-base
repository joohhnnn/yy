    android:paddingBottom="@dimen/win_layout_card_margin_ver_screen"
    android:paddingLeft="@dimen/win_layout_card_margin_hor_screen"
    android:paddingRight="@dimen/win_layout_card_margin_hor_screen">

    <LinearLayout
