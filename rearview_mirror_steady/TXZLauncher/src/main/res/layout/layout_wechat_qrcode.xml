<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_range_bg"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="120px"
        android:layout_height="120px">

        <ImageView
            android:id="@+id/iv_wechat_qrcode"
            android:layout_width="120px"
            android:layout_height="120px"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/iv_wechat_qrcode_mask"
            android:src="#66000000"
            android:visibility="invisible"
            android:layout_width="120px"
            android:layout_height="120px" />

        <ImageView
            android:id="@+id/iv_wechat_refresh_qrcode"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center"
            android:background="#0F000000"
            android:src="@drawable/ic_wechat_refresh_qrcode"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_wechat_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9px"
        android:text="微信“扫一扫”，登录微信助手"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/dimen_text_size_wechat_qrcode_tips"/>

</LinearLayout>