<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ydp60"
            android:orientation="horizontal"
            android:gravity="center_vertical">

<!--            <ImageView-->
<!--                android:id="@+id/ivBack"-->
<!--                android:layout_width="@dimen/mdp40"-->
<!--                android:layout_height="@dimen/mdp40"-->
<!--                android:src="@drawable/back"-->
<!--                android:layout_marginLeft="@dimen/x12"/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="智能家居控制授权"
                android:textSize="@dimen/sp24"
                android:textColor="@color/textColorPrimary"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/cardDividerColor"/>

        <ImageView
            android:id="@+id/ivQrCode"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="@dimen/ydp20"
            android:padding="10dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="微信扫码立即授权"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/sp18"/>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ydp10"
            android:text=""
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/sp18"
            android:lineSpacingMultiplier="1.2"/>

    </LinearLayout>

</ScrollView>