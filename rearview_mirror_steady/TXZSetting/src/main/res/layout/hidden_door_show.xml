<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x467"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_hidden_door_open_log"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="@drawable/list_bg1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/x7"
            android:paddingStart="@dimen/x20"
            android:text="@string/hidden_door_open_log"
            android:textColor="@color/text_color_white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textview_hidden_door_open_log_show"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/hidden_door_open_log_show"
            android:textColor="@color/color_text_item"
            android:textSize="15sp" />

        <com.txznet.txzsetting.view.CheckSwitchButton
            android:id="@+id/checkbox_hidden_door_open_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            android:button="@drawable/radiobutton"
            android:text="@null" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/color_xiantiao" />

    <LinearLayout
        android:id="@+id/layout_hidden_door_open_voice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="@drawable/list_bg2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/x7"
            android:paddingStart="@dimen/x20"
            android:text="@string/hidden_door_open_voice"
            android:textColor="@color/text_color_white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textview_hidden_door_open_voice_show"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/hidden_door_open_log_show"
            android:textColor="@color/color_text_item"
            android:textSize="15sp" />

        <com.txznet.txzsetting.view.CheckSwitchButton
            android:id="@+id/checkbox_hidden_door_open_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            android:button="@drawable/radiobutton"
            android:text="@null" />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/color_xiantiao" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="@drawable/list_bg3"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/hidden_door_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/background_00"
            android:textColor="@color/text_color_white"
            android:textSize="25sp"
            android:text="@string/yes" />

        <ImageView
            android:layout_width="@dimen/y1"
            android:layout_height="match_parent"
            android:background="@color/color_xiantiao" />

        <Button
            android:id="@+id/hidden_door_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/background_00"
            android:textColor="@color/text_color_white"
            android:textSize="25sp"
            android:text="@string/no" />

    </LinearLayout>
</LinearLayout>