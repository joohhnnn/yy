<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_head_radio"
                android:layout_width="match_parent"
                android:layout_height="?attr/fg_music_title_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x118"
                android:layout_marginRight="@dimen/x118"
                android:background="@color/title_header"
                android:orientation="horizontal"
                android:visibility="gone">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_radio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:animateLayoutChanges="false">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>