<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/win_menu_color_bg" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgInit_Anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y94"
            android:scaleType="fitCenter"
            android:src="@drawable/widget_progress_anim" />

        <TextView
            android:id="@+id/btnMenu_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y14"
            android:text="导航正在初始化…"
            android:textColor="#ffffff"
            android:textSize="@dimen/y40" />

        <Button
            android:id="@+id/btnInit_Close"
            android:layout_width="@dimen/x350"
            android:layout_height="@dimen/y90"
            android:layout_marginBottom="@dimen/y64"
            android:layout_marginTop="@dimen/y96"
            android:background="#34bfff"
            android:text="后台加载"
            android:textColor="#ffffff"
            android:textSize="@dimen/y40" />
    </LinearLayout>

</FrameLayout>