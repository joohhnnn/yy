<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_setting"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="@dimen/y20"
              android:paddingTop="@dimen/y20"
              android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/x48"
        android:layout_weight="1"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/layout_push"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:layout_weight="1"
            android:background="@drawable/bg_item_setting"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:text="@string/str_close_push_msg_init"
                android:textColor="#FFFFFF"
                android:textSize="?attr/text_size_h2"/>

            <ImageView
                android:id="@+id/iv_push"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/setting_switch_on"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_version"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:layout_weight="1"
            android:background="@drawable/bg_item_setting"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:text="当前版本"
                android:textColor="#FFFFFF"
                android:textSize="?attr/text_size_h2"/>

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/x10"
                android:text="4.0.0"
                android:textColor="#7FFFFFFF"
                android:textSize="@dimen/m20"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_help"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:layout_weight="1"
            android:background="@drawable/bg_item_setting"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:text="帮助"
                android:textColor="#FFFFFF"
                android:textSize="?attr/text_size_h2"/>


            <ImageView
                android:id="@+id/iv_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/x10"
                android:src="@drawable/setting_right"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/x48"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="3">


        <RelativeLayout
            android:id="@+id/layout_wakeup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:layout_weight="1"
            android:background="@drawable/bg_item_setting"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:text="免唤醒语音指令"
                android:textColor="#FFFFFF"
                android:textSize="?attr/text_size_h2"/>

            <ImageView
                android:id="@+id/iv_wakeup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/setting_switch_on"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_cache"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:layout_weight="1"
            android:background="@drawable/bg_item_setting"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:text="清除缓存"
                android:textColor="#FFFFFF"
                android:textSize="?attr/text_size_h2"/>

            <TextView
                android:id="@+id/tv_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/x10"
                android:text="10M"
                android:textColor="#7FFFFFFF"
                android:textSize="@dimen/m20"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_about"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:layout_weight="1"
            android:background="@drawable/bg_item_setting"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:text="关于同听"
                android:textColor="#FFFFFF"
                android:textSize="?attr/text_size_h2"/>


            <ImageView
                android:id="@+id/setting_right_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/x10"
                android:layout_centerVertical="true"
                android:src="@drawable/setting_right"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>