<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="activity_preview_rb_select_path">
        <item name="android:textSize">@dimen/y22</item>
        <item name="android:textColor">@color/activity_preview_rb_select_path_text_color</item>
        <item name="android:drawablePadding">-20dp</item>
        <item name="android:background">@color/activity_preview_rb_select_path_bg_color</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">@dimen/y15</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>