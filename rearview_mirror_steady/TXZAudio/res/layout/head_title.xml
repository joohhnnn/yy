<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/type_name"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y80"
    android:layout_gravity="center_vertical"
    android:background="@color/title_header"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y48"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/y36" />

    <RelativeLayout
        android:id="@+id/rl_filter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x20"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginRight="@dimen/x8"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_filter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="筛选筛选"
                android:textColor="@color/drak_green"
                android:textSize="@dimen/y24" />

            <ImageView
                android:id="@+id/iv_filter"
                android:layout_width="@dimen/y24"
                android:layout_height="@dimen/y24"
                android:layout_marginLeft="@dimen/x6"
                android:background="@drawable/fm_item_screening_down_1" />
        </LinearLayout>
    </RelativeLayout>

