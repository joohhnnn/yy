<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_list_title"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="请说第几个选择或取消"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/dimen_text_size_list_title" />

        <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="end|center_vertical"-->
        <!--android:gravity="end|center_vertical"-->
        <!--android:orientation="horizontal">-->

        <TextView
            android:id="@+id/tv_list_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="上一页"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/dimen_text_size_list_pre" />

        <TextView
            android:id="@+id/tv_list_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7px"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/dimen_text_size_list_page"
            tools:text="2/3" />

        <TextView
            android:id="@+id/tv_list_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7px"
            android:layout_marginRight="4px"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="下一页"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/dimen_text_size_list_next" />
        <!--</LinearLayout>-->
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_list_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>