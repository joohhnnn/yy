<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrValue="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y99"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2d3135"
            android:gravity="center"
            android:text="远程管理车队"
            android:textColor="#adb6cc"
            android:textSize="30px" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#32373b"
        android:paddingLeft="@dimen/x60"
        android:paddingRight="@dimen/x50" >

        <ImageView
            android:id="@+id/code_iv"
            android:layout_width="@dimen/x260"
            android:layout_height="@dimen/y260"
            android:layout_centerVertical="true"
            android:background="#ffffff"
            android:scaleType="matrix" />

        <TextView
            android:id="@+id/static_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x26"
            android:layout_toRightOf="@id/code_iv"
            android:text="打开微信，扫描左侧的二维码，通过微信远程管理你的车队~"
            android:textColor="#adb6cc"
            android:textSize="24px" />
    </RelativeLayout>

</LinearLayout>