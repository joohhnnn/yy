<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/m96"
    android:baselineAligned="false"
    android:gravity="center"
    tools:background="@drawable/base_bg">

    <com.txznet.music.widget.AlphaButton
        android:id="@+id/btn_queue"
        android:layout_width="@dimen/m48"
        android:layout_height="@dimen/m48"
        android:layout_gravity="center"
        android:background="@drawable/player_play_list_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.txznet.music.widget.AlphaCheckBox
        android:id="@+id/cb_favour"
        android:layout_width="@dimen/m48"
        android:layout_height="@dimen/m48"
        android:layout_gravity="center"
        android:background="@drawable/base_favour_btn_selector"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.txznet.music.widget.AlphaCheckBox
        android:id="@+id/cb_lrc"
        android:layout_width="@dimen/m48"
        android:layout_height="@dimen/m48"
        android:layout_gravity="center"
        android:background="@drawable/player_lyric_btn_selector"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.txznet.music.widget.AlphaButton
        android:id="@+id/btn_play_mode"
        android:layout_width="@dimen/m48"
        android:layout_height="@dimen/m48"
        android:layout_gravity="center"
        android:background="@drawable/player_queue_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>