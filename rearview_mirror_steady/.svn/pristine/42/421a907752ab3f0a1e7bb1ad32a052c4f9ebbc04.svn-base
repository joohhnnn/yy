<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x400"
    android:layout_height="wrap_content"
    android:background="@drawable/sim_dialog_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y54"
        android:layout_marginBottom="@dimen/y8"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/y32"
            android:layout_height="@dimen/y32"
            android:layout_marginRight="@dimen/x10"
            android:src="@drawable/sim_waning" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="非官方sim卡"
            android:textColor="#FFF"
            android:textSize="@dimen/y30" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y10"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:textColor="#FFF"
        android:textSize="@dimen/y24" >
    </TextView>

    <ImageView
        android:id="@+id/iv_qrcode"
        android:layout_width="@dimen/y200"
        android:layout_height="@dimen/y200"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/y10"
        android:background="#FFF" />

    <FrameLayout
        android:id="@+id/fl_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:orientation="vertical" >

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="#33FFFFFF" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="#44A9FF"
            android:textSize="@dimen/y24" />
    </FrameLayout>

</LinearLayout>