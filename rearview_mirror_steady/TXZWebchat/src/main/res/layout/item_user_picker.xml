<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_user_picker_avatar"
        android:layout_width="@dimen/y150"
        android:layout_height="@dimen/y150"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginRight="@dimen/x12"
        android:src="@drawable/default_headimage"
        app:riv_corner_radius="@dimen/y8"/>

    <View
        android:id="@+id/view_user_picker_indicator"
        android:visibility="gone"
        android:layout_width="@dimen/y150"
        android:layout_height="@dimen/y150"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginRight="@dimen/x12"
        android:background="@drawable/ic_nav_indicator_circle" />

</FrameLayout>