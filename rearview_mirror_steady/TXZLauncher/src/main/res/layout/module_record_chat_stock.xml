<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2px"
        android:singleLine="true"
        android:text="股票"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/dimen_text_size_h4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6px"
        android:background="@drawable/list_item_range_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="14px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_stock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_stock_name"
                android:textSize="@dimen/dimen_text_size_stock_name"
                tools:text="苹果"/>

            <TextView
                android:id="@+id/tv_stock_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:singleLine="true"
                android:textColor="@color/color_stock_code"
                android:textSize="@dimen/dimen_text_size_stock_code"
                tools:text="AAPL"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="10px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_stock_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/dimen_text_size_stock_price"
                tools:text="116.76"
                tools:textColor="@color/color_stock_price_down"/>

            <ImageView
                android:id="@+id/iv_stock_state"
                android:layout_width="23px"
                android:layout_height="26px"
                android:layout_marginLeft="5px"
                tools:src="@drawable/ic_stock_down"/>

            <TextView
                android:id="@+id/tv_stock_changeRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:singleLine="true"
                android:textSize="@dimen/dimen_text_size_stock_changeRate"
                tools:text="-0.50 (-0.43%)"
                tools:textColor="@color/color_stock_price_down"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="最高"
                android:textColor="@color/color_stock_item_label"
                android:textSize="@dimen/dimen_text_size_stock_highest_price"/>

            <TextView
                android:id="@+id/tv_stock_highest_price"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:singleLine="true"
                android:textColor="@color/color_stock_price_up"
                android:textSize="@dimen/dimen_text_size_stock_highest_price"
                tools:text="118.02"/>

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="最低"
                android:textColor="@color/color_stock_item_label"
                android:textSize="@dimen/dimen_text_size_stock_lowest_price"/>

            <TextView
                android:id="@+id/tv_stock_lowest_price"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:singleLine="true"
                android:textColor="@color/color_stock_price_down"
                android:textSize="@dimen/dimen_text_size_stock_lowest_price"
                tools:text="116.20"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginTop="12px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="昨收"
                android:textColor="@color/color_stock_item_label"
                android:textSize="@dimen/dimen_text_size_stock_yestoday_close_price"/>

            <TextView
                android:id="@+id/tv_stock_yestoday_close_price"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:singleLine="true"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/dimen_text_size_stock_yestoday_close_price"
                tools:text="118.02"/>

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="今开"
                android:textColor="@color/color_stock_item_label"
                android:textSize="@dimen/dimen_text_size_stock_today_open_price"/>

            <TextView
                android:id="@+id/tv_stock_today_open_price"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:singleLine="true"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/dimen_text_size_stock_today_open_price"
                tools:text="116.20"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>