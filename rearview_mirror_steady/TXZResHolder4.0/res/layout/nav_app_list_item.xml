<?xml version="1.0" encoding="utf-8"?>
<com.txznet.comm.ui.view.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_normal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvPos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp24"
                android:textColor="@color/textColorPrimary"
                android:layout_marginLeft="@dimen/xdp20"
                android:text="1"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end" />

            <com.txznet.comm.ui.theme.test.widget.CircleRectView
                android:id="@+id/ivLogo"
                android:layout_width="@dimen/mdp60"
                android:layout_height="@dimen/mdp60"
                android:layout_marginLeft="@dimen/xdp10"
                android:src="@drawable/ic_launcher"
                app:circleRadius="@dimen/mdp10" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp24"
                android:textColor="@color/textColorPrimary"
                android:layout_marginLeft="@dimen/xdp10"
                android:layout_marginRight="@dimen/xdp20"
                android:text="高德地图"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/listDividerColor"/>

    </LinearLayout>

</com.txznet.comm.ui.view.RippleView>