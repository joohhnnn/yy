<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <com.txznet.record.view.rec.RecStartView
        android:id="@+id/rec_widget_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <com.txznet.record.view.rec.RecordView
        android:id="@+id/rec_widget_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <com.txznet.record.view.rec.SearchView
        android:id="@+id/rec_widget_search"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/x5"
        android:paddingRight="@dimen/x5"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

</RelativeLayout>