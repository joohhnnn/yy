<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTransparentTheme" parent="@android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>

　</style>

    <!-- widget_ProgressBar -->
    <style name="win_progress_large" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/widget_progress_large</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>

    <style name="TXZ_Dialog_Style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 是否没标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <!-- 是否背景阴影 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.1</item>
        <!-- 去黑边 -->
        <item name="android:windowBackground">@drawable/transparent_background</item>
    </style>
    
    <style name="TXZ_Dialog_Style_Full" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 是否没标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <!-- 是否背景阴影 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.1</item>
        <!-- 去黑边 -->
        <item name="android:windowBackground">@drawable/transparent_background</item>
        <!-- 全屏 -->
        <item name="android:windowFullscreen">true</item>
    </style>

