<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#b3000000"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x500"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_exit_dialog_back"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/x24"
                android:text="@string/lb_main_help_dialog_content"
                android:textColor="@color/color_dialog_help_text_content"
                android:textSize="@dimen/y30"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="@color/color_dialog_help_divider"/>

        <TextView
            android:id="@+id/tv_main_help_dialog_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:background="@drawable/selector_main_help_dialog_btn"
            android:gravity="center"
            android:text="@string/lb_main_help_dialog_commit"
            android:textColor="@color/color_dialog_help_text_commit"
            android:textSize="@dimen/y36"/>

    </LinearLayout>



</RelativeLayout>