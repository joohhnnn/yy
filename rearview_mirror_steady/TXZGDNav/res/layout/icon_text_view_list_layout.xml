<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrValue="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="99dip"
    android:orientation="horizontal" >

    <com.txznet.nav.ui.widget.IconTextView
        android:id="@+id/id_indicator_one"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        attrValue:color_nor="#adb6cc"
        attrValue:color_sel="#FFFFFF"
        attrValue:nor_background="#2d3135"
        attrValue:sel_background="#34bfff"
        attrValue:icon_text="下载管理" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000" />

    <com.txznet.nav.ui.widget.IconTextView
        android:id="@+id/id_indicator_two"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        attrValue:color_nor="#adb6cc"
        attrValue:color_sel="#FFFFFF"
        attrValue:nor_background="#2d3135"
        attrValue:sel_background="#34bfff"
        attrValue:icon_text="省市列表" />

</LinearLayout>