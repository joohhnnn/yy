<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/y27"
        android:layout_height="@dimen/y27"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x16"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_setting_auto_login"/>

    <com.txznet.webchat.ui.common.widget.ThemedTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y80"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x59"
        android:text="@string/lb_car_main_menu_auto_login"
        android:textColor="@color/color_primary"
        android:textSize="@dimen/y20"
        app:theme_color="primary"/>

    <com.txznet.webchat.ui.rearview_mirror.widget.IconTextStateBtn
        android:id="@+id/view_switch"
        android:layout_width="@dimen/x51"
        android:layout_height="@dimen/y25"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x16"
        app:itsb_clickable="false"
        app:itsb_icon="@drawable/src_car_main_menu_switch_enabled"
        app:itsb_icon_disabled="@drawable/src_car_main_menu_switch_disabled"/>

    <View
        android:id="@+id/view_focus_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="@drawable/ic_nav_indicator_rect"/>

    <View
        style="@style/divider_line_horizontal"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>