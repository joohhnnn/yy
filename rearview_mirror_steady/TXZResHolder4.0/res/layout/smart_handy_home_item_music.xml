<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/smartHandyCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:src="@drawable/smart_handy_icon_music"
                style="@style/SmartHandyCardHeadIcon"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="天天音乐"
                style="@style/SmartHandyCardHeadTitle"/>

            <ImageButton
                android:id="@+id/imgBtnMore"
                style="@style/SmartHandyCardHeadMore"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wrapMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tvSongName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/sp24"
                android:text="歌曲名"
                android:gravity="center"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/sp20"
                android:text="艺术家"
                android:gravity="center"
                android:textColor="@color/textColorSecondary"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/imgBtnPlay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/smart_handy_icon_music_play"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:background="@drawable/xml_smart_handy_bg_rect"/>

            <ImageButton
                android:id="@+id/imgBtnPre"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/smart_handy_icon_music_pre"
                android:layout_toLeftOf="@+id/imgBtnPlay"
                android:layout_marginRight="60dp"
                android:scaleType="centerCrop"
                android:background="@drawable/xml_smart_handy_bg_rect"/>

            <ImageButton
                android:id="@+id/imgBtnNext"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/smart_handy_icon_music_next"
                android:layout_toRightOf="@+id/imgBtnPlay"
                android:layout_marginLeft="60dp"
                android:scaleType="centerCrop"
                android:background="@drawable/xml_smart_handy_bg_rect"/>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>