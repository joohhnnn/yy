<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/background_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    tools:context="com.txznet.txzsetting.activity.MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="26"
        android:background="@color/background_00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y64"
            android:layout_marginBottom="@dimen/y16">

            <Button
                android:id="@+id/actionbar_return"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:background="@color/background_00"
                android:drawablePadding="@dimen/x13"
                android:drawableStart="@drawable/selector_btn_return"
                android:text="@string/actionbar_return"
                android:textColor="@color/text_color_white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/actionbar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/background_00"
                android:text="@string/actionbar_text"
                android:textColor="@color/text_color_white"
                android:textSize="28sp" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_00"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_wakup_main"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y80"
                    android:background="@drawable/selector_listbtn1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/setting_wakup"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/background_00"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/x20"
                        android:text="@string/setting_wakup"
                        android:textColor="@color/text_color_white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/setting_wakup_show"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/x20"
                        android:background="@color/background_00"
                        android:drawableEnd="@drawable/jiantou"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/x20" />
                </LinearLayout>

                <include layout="@layout/include_line" />
                <LinearLayout
                    android:id="@+id/layout_ttsrole"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y80"
                    android:background="@drawable/selector_listbtn2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/setting_ttsrole"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/background_00"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/x20"
                        android:text="@string/setting_ttsrole"
                        android:textColor="@color/text_color_white"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/setting_ttsrole_show"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/x20"
                        android:background="@color/background_00"
                        android:drawablePadding="@dimen/x7"
                        android:drawableRight="@drawable/jiantou"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/x20"
                        android:text="!默认"
                        android:textColor="@color/color_text_item"
                        android:textSize="20sp" />
                </LinearLayout>
                <include layout="@layout/include_line" />
                <LinearLayout
                    android:id="@+id/layout_threshhold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y80"
                    android:background="@drawable/selector_listbtn2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/setting_threshhold"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/background_00"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/x20"
                        android:text="@string/setting_threshhold"
                        android:textColor="@color/text_color_white"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/setting_threshhold_show"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/x20"
                        android:background="@color/background_00"
                        android:drawablePadding="@dimen/x7"
                        android:drawableRight="@drawable/jiantou"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/x20"
                        android:text="!正常"
                        android:textColor="@color/color_text_item"
                        android:textSize="20sp" />
                </LinearLayout>

                <include layout="@layout/include_line" />

                <LinearLayout
                    android:id="@+id/layout_floattool"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y80"
                    android:background="@drawable/selector_listbtn2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/setting_floattool"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/background_00"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/x20"
                        android:text="@string/setting_floattool"
                        android:textColor="@color/text_color_white"
                        android:textSize="20sp" />


                    <com.txznet.txzsetting.view.CheckSwitchButton
                        android:id="@+id/setting_floattool_show"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/x20"
                        android:layout_marginStart="@dimen/x20"
                        android:background="@color/background_00"
                        android:drawablePadding="@dimen/x7"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/x20"
                        android:textColor="@color/color_text_item"
                        android:textSize="20sp" />
                </LinearLayout>

                <include layout="@layout/include_line" />

                <LinearLayout
                    android:id="@+id/layout_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y80"
                    android:background="@drawable/selector_listbtn3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/setting_welcome"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/background_00"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/x20"
                        android:text="@string/setting_welcome"
                        android:textColor="@color/text_color_white"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/setting_welcome_show"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/x20"
                        android:background="@color/background_00"
                        android:drawablePadding="@dimen/x7"
                        android:drawableRight="@drawable/jiantou"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/x20"
                        android:text="@string/setting_welcome_show"
                        android:textColor="@color/color_text_item"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_poi_map_mode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y80"
                    android:layout_marginTop="@dimen/x20"
                    android:background="@drawable/selector_listbtn4"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/setting_poi_map_mode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/background_00"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/x20"
                        android:text="@string/actionbar_text_poi_map_mode"
                        android:textColor="@color/text_color_white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/setting_poi_map_mode_show"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/x20"
                        android:background="@color/background_00"
                        android:drawablePadding="@dimen/x7"
                        android:drawableRight="@drawable/jiantou"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/x20"
                        android:text="@string/setting_welcome_show"
                        android:textColor="@color/color_text_item"
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_version"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y80"
                    android:layout_marginTop="@dimen/x20"
                    android:background="@drawable/selector_listbtn1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/setting_txzversion"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/background_00"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/x20"
                        android:text="@string/txzversion"
                        android:textColor="@color/text_color_white"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/setting_txzversion_show"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/background_00"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/x20"
                        android:text="!V2.5.0"
                        android:textColor="@color/color_text_item"
                        android:textSize="20sp" />
                </LinearLayout>

                <include layout="@layout/include_line" />

                <LinearLayout
                    android:id="@+id/layout_uid"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y80"
                    android:background="@drawable/selector_listbtn3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/setting_shebeihao"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/background_00"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/x20"
                        android:text="@string/shebeihao"
                        android:textColor="@color/text_color_white"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/setting_uid"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/x20"
                        android:background="@color/background_00"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/x20"
                        android:text="!123456"
                        android:textColor="@color/color_text_item"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_logo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y80"
                    android:background="@color/background_00"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/x5"
                        android:background="@color/background_00"
                        android:text="@string/logo_1"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/x5"
                        android:background="@drawable/txz_logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/x5"
                        android:background="@color/background_00"
                        android:text="@string/logo_2"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/logo_dingdang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/x5"
                        android:background="@drawable/dingdang_logo"
                        android:scaleType="centerInside"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/logo_txcl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/x5"
                        android:background="@drawable/txcl_logo"
                        android:scaleType="centerInside"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/x5"
                        android:background="@drawable/dumi_logo"
                        android:scaleType="centerInside" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/x5"
                        android:background="@drawable/yzs_logo"
                        android:scaleType="centerInside" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/background_00"
                        android:text="@string/logo_3"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/y20"
                    android:paddingTop="@dimen/y20"
                    android:text="@string/qqwelcome"
                    android:textColor="@color/color_text_item"
                    android:textSize="20sp"
                    android:visibility="gone" />
            </LinearLayout>


        </ScrollView>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="26"
        android:background="@color/background_00" />


</LinearLayout>
