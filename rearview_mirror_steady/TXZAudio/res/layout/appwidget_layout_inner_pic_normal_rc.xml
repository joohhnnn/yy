<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appwidget_layout_inner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/Widget_Pic_Bg"
        android:layout_width="@dimen/y162"
        android:layout_height="@dimen/y162"
        android:layout_centerInParent="true"
        android:src="@drawable/appwidget_pic_bg"
        android:visibility="invisible"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/Widget_Pic"
        android:layout_width="@dimen/y150"
        android:layout_height="@dimen/y150"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/appwidget_pic_default_rc" />

</RelativeLayout>