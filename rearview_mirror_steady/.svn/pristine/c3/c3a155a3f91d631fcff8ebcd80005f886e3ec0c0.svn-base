<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="34px"
        android:clipChildren="false"
        android:orientation="horizontal">

        <!-- offset  -->
        <com.txznet.launcher.widget.image.WaveView
            android:id="@+id/v_wave_lhs"
            android:layout_width="190px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-143px"
            android:rotation="-180"
            tools:src="@drawable/shengbochuxian_00001" />

        <com.txznet.launcher.widget.image.WaveView
            android:id="@+id/v_wave_rhs"
            android:layout_width="190px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="96px"
            tools:src="@drawable/shengbochuxian_00001" />
    </LinearLayout>

    <ImageView
        android:layout_width="192px"
        android:layout_height="99px"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/stage" />

    <ImageView
        android:id="@+id/iv_light"
        android:layout_width="166px"
        android:layout_height="175px"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="16px"
        android:src="@drawable/light" />

    <ImageView
        android:layout_width="84px"
        android:layout_height="19px"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="45px"
        android:src="@drawable/shadow" />

    <ImageView
        android:id="@+id/iv_character"
        android:layout_width="106px"
        android:layout_height="121px"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="52px"
        android:src="@drawable/jingmo_00000" />
</merge>