<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_Mic"
            android:layout_width="@dimen/x190"
            android:layout_height="@dimen/y190"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_mic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_Mic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y20"
            android:text="“你好，小T”来唤醒我"
            android:textColor="#99FFFFFF"
            android:textSize="@dimen/y20" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y136"
        android:layout_alignParentBottom="true"
        android:background="@drawable/launcher_bottom_panel_bg"
        android:orientation="vertical">

        <com.txznet.launcher.ui.widget.MyViewPager
            android:id="@+id/launcher_view_pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120" />

        <LinearLayout
            android:id="@+id/llIndicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal" />
    </LinearLayout>
</LinearLayout>