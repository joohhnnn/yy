<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="AppTransparentTheme">
        <item name="android:windowNoTitle">true</item>

　</style>

    <!-- WheelView 相关风格 -->
    <style name="sms_detail_wheelview_ly">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="sms_detail_wheelview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="sms_detail_wheelview_item">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">42dip</item>
        <item name="android:minHeight">42dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="widget_wheelview_item_icon">
        <item name="android:layout_width">32dip</item>
        <item name="android:layout_height">32dip</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:cropToPadding">true</item>
    </style>

    <style name="widget_wheelview_item_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
