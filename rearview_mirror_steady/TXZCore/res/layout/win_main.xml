<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_color"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x65"
        android:paddingRight="@dimen/x65" >

        <Button
            android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawablePadding="@dimen/y8"
            android:drawableTop="@drawable/win_main_ic_call"
            android:text="@string/win_main_str_call"
            android:textColor="#d4d7e0"
            android:textSize="@dimen/y20" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/btnNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawablePadding="@dimen/y8"
            android:drawableTop="@drawable/win_main_ic_nav"
            android:enabled="true"
            android:text="@string/win_main_str_nav"
            android:textColor="#d4d7e0"
            android:textSize="@dimen/y20" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/btnMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawablePadding="@dimen/y8"
            android:drawableTop="@drawable/win_main_ic_music"
            android:text="@string/win_main_str_music"
            android:textColor="#d4d7e0"
            android:textSize="@dimen/y20" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/btnSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawablePadding="@dimen/y8"
            android:drawableTop="@drawable/win_main_ic_setting"
            android:text="@string/win_main_str_setting"
            android:textColor="#d4d7e0"
            android:textSize="@dimen/y20" />
    </LinearLayout>

</LinearLayout>