<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/y10"
    >

    <LinearLayout
        tools:background="#FF000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_range_layout"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/y64"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y64"
            android:gravity="center"
            android:text="季前赛（今天）"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/m25"/>

        <TextView
            android:id="@+id/tvTime"
            tools:text="2019年4月25日  周四  10:30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y8"
            android:gravity="center"
            android:textColor="#FF89898A"
            android:textSize="@dimen/m20"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y24"
            android:orientation="horizontal"
            >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/x20"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivHomeTeam"
                        android:layout_width="@dimen/m120"
                        android:layout_height="@dimen/m120"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tvHomeTeam"
                        tools:text="湖人"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/y8"
                        android:textColor="#FFFFFFFF"
                        android:textSize="@dimen/m20"/>
                </LinearLayout>
            </FrameLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:paddingTop="@dimen/y24">

                <TextView
                    android:id="@+id/tvGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/m48"/>

                <TextView
                    android:id="@+id/tvPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:paddingLeft="@dimen/x20"
                    android:paddingTop="@dimen/y3"
                    android:paddingRight="@dimen/x20"
                    android:paddingBottom="@dimen/y3"
                    android:textSize="@dimen/m16"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/x20"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivAwayTeam"
                        android:layout_width="@dimen/m120"
                        android:layout_height="@dimen/m120"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tvAwayTeam"
                        tools:text="湖人"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/y8"
                        android:textColor="#FFFFFFFF"
                        android:textSize="@dimen/m20"/>
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>