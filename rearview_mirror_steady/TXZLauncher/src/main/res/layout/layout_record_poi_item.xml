<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60px"
    android:background="@drawable/list_item_range_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_poi_num"
        android:layout_width="28px"
        android:layout_height="28px"
        android:layout_marginLeft="15px"
        android:background="@drawable/list_item_index_circle_bg"
        android:gravity="center"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/dimen_text_size_list_index"
        tools:text="1"/>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8px"
        android:layout_marginLeft="10px"
        android:layout_marginTop="8px"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_poi_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/dimen_text_size_list_poi_name"
            tools:text="世界之窗"/>

        <TextView
            android:id="@+id/tv_poi_geo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#B3FFFFFF"
            android:textSize="@dimen/dimen_text_size_list_poi_geo"
            tools:text="深南大道9037号世界之窗"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_poi_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12px"
        android:layout_marginRight="12px"
        android:singleLine="true"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/dimen_text_size_list_poi_distance"
        tools:text="3.5km"/>

</LinearLayout>