<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x400"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_common_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y64"
        android:layout_marginBottom="@dimen/y10"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/y32"
            android:layout_height="@dimen/y32"
            android:layout_marginRight="@dimen/x10"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="#FFF"
            android:textSize="@dimen/y30" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_custom_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y10"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:textColor="#FFF"
        android:textSize="@dimen/y24"
        android:visibility="gone" >
    </TextView>

    <ImageView
        android:id="@+id/iv_qrcode"
        android:layout_width="@dimen/y200"
        android:layout_height="@dimen/y200"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/y10"
        android:background="#FFF"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/win_messagebox_sure_btn"
            android:gravity="center"
            android:textColor="#44A9FF"
            android:textSize="@dimen/y24"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/win_messagebox_cancel_btn"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/y24"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>