<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/m92"
    tools:background="@drawable/base_bg">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m92"
        android:scaleType="centerCrop"
        tools:src="@drawable/home_default_cover_icon_strip_large" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m48"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:paddingLeft="@dimen/m8"
        android:paddingRight="@dimen/m8"
        android:singleLine="true"
        android:textSize="@dimen/base_tv_h6"
        tools:text="电子浪潮" />

    <com.txznet.music.widget.PlayingStateView
        android:id="@+id/iv_playing"
        android:layout_width="@dimen/m16"
        android:layout_height="@dimen/m16"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/m5"
        android:layout_marginRight="@dimen/m5"
        android:visibility="gone" />
</FrameLayout>