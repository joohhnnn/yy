<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17px"
        android:clipChildren="false"
        android:orientation="horizontal">

        <!-- offset  -->
        <com.txznet.launcher.widget.image.WaveView
            android:id="@+id/v_wave_lhs"
            android:layout_width="49px"
            android:layout_height="12px"
            android:layout_marginLeft="-37px"
            android:rotation="-180"
            tools:src="@drawable/shengbochuxian_00001" />

        <com.txznet.launcher.widget.image.WaveView
            android:id="@+id/v_wave_rhs"
            android:layout_width="49px"
            android:layout_height="12px"
            android:layout_marginLeft="25px"
            tools:src="@drawable/shengbochuxian_00001" />
    </LinearLayout>

    <ImageView
        android:layout_width="22px"
        android:layout_height="5px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="56px"
        android:src="@drawable/shadow" />

    <ImageView
        android:id="@+id/iv_character"
        android:layout_width="50px"
        android:layout_height="59px"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/jingmo_00000" />
</merge>