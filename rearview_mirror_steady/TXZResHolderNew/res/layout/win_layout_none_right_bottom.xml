<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="right|bottom"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/llContent"
        android:layout_width="@dimen/x448"
        android:layout_height="@dimen/y252"
        android:layout_gravity="right"
        android:background="@drawable/dialog_none_background"
        android:visibility="gone" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llHome"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y70"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/y10"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivHelp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/help_icon_background_left"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:src="@drawable/help_icon"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/flTalk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rlRecordView"
            android:layout_width="@dimen/y70"
            android:layout_height="@dimen/y70"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>