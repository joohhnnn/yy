<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#cc191B21"
             android:id="@+id/fl_blank"
             android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <LinearLayout
            android:layout_width="@dimen/m461"
            android:layout_height="wrap_content"
            android:background="#2F313F"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/m36"
                android:layout_marginBottom="@dimen/m20"
                android:layout_marginTop="@dimen/m20"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="?attr/text_size_h1"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/m30"
                android:layout_marginLeft="@dimen/m50"
                android:layout_marginRight="@dimen/m50"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="?attr/text_size_h2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1FFFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/m80"
                android:orientation="horizontal">

                <TextView
                    android:textSize="?attr/text_size_h2"
                    android:id="@+id/tv_sure"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#1FFFFFFF"/>

                <TextView
                    android:textSize="?attr/text_size_h2"
                    android:id="@+id/tv_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>