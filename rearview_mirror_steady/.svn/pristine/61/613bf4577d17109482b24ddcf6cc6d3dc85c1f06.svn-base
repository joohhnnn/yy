<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_wechat_sender_icon"
        android:layout_width="32px"
        android:layout_height="32px"
        android:layout_marginLeft="15px"
        android:scaleType="fitXY"
        android:src="@drawable/ic_wechat_default_head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_wechat_sender_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/dimen_text_size_h7"
            android:singleLine="true"
            android:layout_marginRight="40px"
            tools:text="nick"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_wechat_msg"/>

            <TextView
                android:id="@+id/tv_wechat_msg_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5px"
                android:background="@drawable/list_item_range_bg"
                android:padding="4px"
                android:text="回复微信"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/dimen_text_size_wechat_msg_answer"/>

            <TextView
                android:id="@+id/tv_wechat_msg_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3px"
                android:background="@drawable/list_item_range_bg"
                android:padding="4px"
                android:text="导航过去"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/dimen_text_size_wechat_msg_nav"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>