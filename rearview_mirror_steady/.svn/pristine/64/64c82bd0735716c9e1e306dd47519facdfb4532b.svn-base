<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/mdp20"
            android:paddingRight="@dimen/mdp20"
            android:paddingTop="@dimen/mdp20"
            android:paddingBottom="@dimen/mdp20">

            <LinearLayout
                android:id="@+id/head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivName"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/mdp10">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test运势"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp20"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/m3">

                        <ImageView
                            android:id="@+id/ivStar1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/star_enable"/>

                        <ImageView
                            android:id="@+id/ivStar2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/star_enable"
                            android:layout_marginLeft="@dimen/mdp10"/>

                        <ImageView
                            android:id="@+id/ivStar3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/star_enable"
                            android:layout_marginLeft="@dimen/mdp10"/>

                        <ImageView
                            android:id="@+id/ivStar4"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/star_enable"
                            android:layout_marginLeft="@dimen/mdp10"/>

                        <ImageView
                            android:id="@+id/ivStar5"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/star_enable"
                            android:layout_marginLeft="@dimen/mdp10"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/mdp10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                android:lineSpacingMultiplier="1.2"
                android:layout_below="@id/head"
                android:layout_alignRight="@id/head"
                android:layout_alignEnd="@id/head"
                android:visibility="gone"
                android:text="Test-与人合作容易出现意见分歧，而你又有着很强烈的个人主见，很可能会僵持着没有结果。所以尽量避免合作，也不要组织活动，容易暴露你的短板。你会有比较多的时间进行一些浪漫或是有仪式感的安排，可以好好感受生活的气息。"/>

        </RelativeLayout>

    </FrameLayout>

</ScrollView>