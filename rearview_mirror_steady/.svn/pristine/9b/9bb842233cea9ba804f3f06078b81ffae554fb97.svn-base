<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/y20" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <RelativeLayout
            android:id="@+id/sim_status_bg"
            android:layout_width="@dimen/y160"
            android:layout_height="@dimen/y160"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_sim" >

            <ImageView
                android:id="@+id/sim_status"
                android:layout_width="@dimen/y40"
                android:layout_height="@dimen/y40"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_done" />
        </RelativeLayout>

        <TextView
            android:id="@+id/sim_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sim_status_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y20"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/y24" />
    </RelativeLayout>

    <TextView
        android:id="@+id/go_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:text="@string/string_open_wifi"
        android:textColor="#4AA5FA"
        android:textSize="@dimen/y24" />

</RelativeLayout>